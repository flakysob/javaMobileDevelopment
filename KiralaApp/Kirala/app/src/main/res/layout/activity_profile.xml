<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBack"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/firstlayer"
                android:gravity="center">


                <TextView
                    android:id="@+id/kullaniciadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginOuterSmallButton"
                    android:text="John Doe"
                    android:textColor="@color/colorTitle"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="70px">

                <TextView
                    android:id="@+id/kullanicieposta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eposta"
                    android:textColor="@color/colorTitleWhite"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="70px">

                <TextView
                    android:id="@+id/kullanicitelefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefon"
                    android:textColor="@color/colorTitleWhite"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="70px">


                <Button
                    android:id="@+id/btnilanlarim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="İlanlarım">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="70px">


                <Button
                    android:id="@+id/btnbilgilerimidegistir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bilgilerimi Değiştir">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="70px">


                <Button
                    android:id="@+id/btnkiraladigimurunler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kiraladığım Ürünler">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="70px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="70px">


                <Button
                    android:id="@+id/btnOnayBekleyen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Onay Bekleyen Ürünlerim">

                </Button>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>