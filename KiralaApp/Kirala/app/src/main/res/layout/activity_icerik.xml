<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".IcerikActivity">

    <TextView
        android:id="@+id/icerikBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="7dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/IcerikResim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IcerikResim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="461dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icerikFiyat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icerikBaslik"
        app:srcCompat="@drawable/pp" />

    <TextView
        android:id="@+id/icerikTelefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/IcerikResim"
        app:layout_constraintTop_toBottomOf="@+id/IcerikResim" />

    <TextView
        android:id="@+id/icerikFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IcerikResim"
        app:layout_constraintTop_toTopOf="@+id/IcerikResim" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:text="Fiyat (Ay/TL) : "
        app:layout_constraintEnd_toStartOf="@+id/icerikFiyat"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/IcerikResim"
        app:layout_constraintTop_toTopOf="@+id/IcerikResim" />

    <Button
        android:id="@+id/btnKirala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirala"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icerikTelefon"
        app:layout_constraintVertical_bias="0.274" />

    <TextView
        android:id="@+id/icerikaciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnKirala"
        app:layout_constraintEnd_toEndOf="@+id/icerikTelefon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/icerikTelefon"
        app:layout_constraintTop_toBottomOf="@+id/icerikTelefon"
        app:layout_constraintVertical_bias="0.626" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Ürün Sahibinin Telefon Numarası"
        app:layout_constraintStart_toStartOf="@+id/IcerikResim"
        app:layout_constraintTop_toBottomOf="@+id/IcerikResim" />

</androidx.constraintlayout.widget.ConstraintLayout>